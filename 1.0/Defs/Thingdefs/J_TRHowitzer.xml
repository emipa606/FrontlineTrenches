<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="TR_BuildingBaseHW" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
    <tickerType>Never</tickerType>
  </ThingDef>
  <!-- ================ Howitzer ================ -->
  <ThingDef ParentName="TR_BuildingBaseHW">
    <defName>TR_Base_Howitzer</defName>
    <label>Long-range Howitzer.</label>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <researchPrerequisites>
      <li>Trenches2</li>
    </researchPrerequisites>
    <description>Long-range Howitzer</description>
    <thingClass>Building_TurretGun</thingClass>
    <minifiedDef>MinifiedThing</minifiedDef>
    <graphicData>
      <texPath>Things/Building/Mounted/BaseHowitzerTR</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.5,3.5)</drawSize>
      <damageData>
        <rect>(0.38,0.2,0.56375,0.8)</rect>
        <cornerTL>Damage/Corner</cornerTL>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Mounted/Icons/HowitzerTR_UI</uiIconPath>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <stealable>false</stealable>
    <rotatable>true</rotatable>
    <size>(2,2)</size>
    <statBases>
      <MaxHitPoints>800</MaxHitPoints>
      <Flammability>0.1</Flammability>
      <WorkToBuild>18000</WorkToBuild>
      <Mass>250</Mass>
      <Beauty>-10</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li Class="CompProperties_Mannable">
        <manWorkType>Violent</manWorkType>
      </li>
      <li Class="CompProperties_Breakdownable" />
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>Scherenfernrohr</li>
        </linkableFacilities>
      </li>
    </comps>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.2</fillPercent>
    <castEdgeShadows>false</castEdgeShadows>
    <hasTooltip>true</hasTooltip>
    <costList>
      <Steel>500</Steel>
      <ComponentIndustrial>30</ComponentIndustrial>
    </costList>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Trenches</designationCategory>
    <inspectorTabs>
      <li ListIndex="0">ITab_Shells</li>
    </inspectorTabs>
    <building>
      <turretGunDef>TR_Gun_Howitzer</turretGunDef>
      <turretBurstWarmupTime>5.0</turretBurstWarmupTime>
      <turretBurstCooldownTime>20.0</turretBurstCooldownTime>
      <turretTopGraphicPath>Things/Building/Mounted/HowitzerTRGun_old</turretTopGraphicPath>
      <blueprintGraphicData>
        <texPath>Things/Building/Mounted/Blueprints/HowitzerTR_BP</texPath>
      </blueprintGraphicData>
    </building>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_ShellHowitzerTR</defName>
    <label>Howitzer Bullet</label>
    <graphicData>
      <texPath>Things/Building/Mounted/Bullets/Howitzerbullet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <damageAmountBase>50</damageAmountBase>
      <explosionRadius>4</explosionRadius>
      <speed>80</speed>
      <flyOverhead>true</flyOverhead>
      <soundExplode>TR_ExplosionHowitzer</soundExplode>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
      <soundImpactAnticipate>TR_IncomingHowitzer</soundImpactAnticipate>
    </projectile>
  </ThingDef>
  <ThingDef Name="TR_BaseWeaponHW" Abstract="True">
    <statBases>
      <MaxHitPoints>800</MaxHitPoints>
      <Flammability>0.1</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <Beauty>-6</Beauty>
      <SellPriceFactor>0.20</SellPriceFactor>
    </statBases>
    <pathCost>10</pathCost>
    <altitudeLayer>Item</altitudeLayer>
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <tickerType>Never</tickerType>
    <useHitPoints>true</useHitPoints>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompEquippable</compClass>
      </li>
    </comps>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <selectable>true</selectable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <alwaysHaulable>true</alwaysHaulable>
    <equipmentType>Primary</equipmentType>
  </ThingDef>
  <ThingDef ParentName="TR_BaseWeaponHW">
    <defName>TR_Gun_Howitzer</defName>
    <label>Long-range Howitzer.</label>
    <description>Long-range Howitzer.</description>
    <graphicData>
      <texPath>Invis</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <menuHidden>true</menuHidden>
    <soundInteract>Interact_Rifle</soundInteract>
    <!--><canBeSpawningInventory>false</canBeSpawningInventory><-->
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <statBases>
      <MarketValue>1500</MarketValue>
      <AccuracyTouch>0.20</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>20</RangedWeapon_Cooldown>
      <Mass>250</Mass>
    </statBases>
    <weaponTags>
      <li>Gun</li>
      <li>TurretGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <forcedMissRadius>1</forcedMissRadius>
        <warmupTime>5</warmupTime>
        <minRange>5</minRange>
        <range>500</range>
        <burstShotCount>1</burstShotCount>
        <ticksBetweenBurstShots>100</ticksBetweenBurstShots>
        <soundCast>TR_Howitzer_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>20</muzzleFlashScale>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <requireLineOfSight>false</requireLineOfSight>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_ChangeableProjectile" />
    </comps>
    <building>
      <fixedStorageSettings>
        <filter>
          <thingDefs>
            <li>Shell_HowitzerTR</li>
          </thingDefs>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <filter>
          <thingDefs>
            <li>Shell_HowitzerTR</li>
          </thingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
  </ThingDef>
</Defs>